{
  "manifest_version": 2,
  "name": "Medium Banner Remover",
  "version": "1.0",
  "description": "A simple addon to remove medium article banners that clutter the screen",
  "homepage_url": "https://github.com/colinlcrawford/medium-banner-remover-addon",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon-128.png",
    "default_title": "Banner Remover!"
  },

  "background": {
    "scripts": ["src/background.js"]
  }

}
